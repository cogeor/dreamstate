{
  "name": "delegate-claude",
  "version": "0.1.0",
  "description": "A Claude Code plugin with background daemon for spec-driven development (delegate)",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "daemon": "tsx src/daemon/index.ts",
    "test": "tsx src/daemon/ipc.test.ts && tsx src/daemon/token-budget.test.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "delegate-claude": "./bin/delegate-claude.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    ".claude-plugin/",
    "commands/",
    "agents/",
    "hooks/",
    "bin/",
    "dist/"
  ],
  "dependencies": {
    "chokidar": "^3.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "author": "cogeor",
  "license": "MIT"
}
